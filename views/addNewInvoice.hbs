<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>New Invoice</title>
    <style>

      input{ font-family: inherit; } select{ font-family: inherit; } form {
      background-color: #fff; padding: 20px; border-radius: 8px; box-shadow: 0 0
      10px rgba(0, 0, 0, 0.1); max-width: 400px; width: 100%; margin: 0 auto; }
      fieldset { padding: 10px; border: 1px solid #ccc; margin-bottom: 20px; }
      select { width: 100%; padding: 5px; margin-bottom: 10px; border: 1px solid
      #ccc; } label { display: block; margin-bottom: 5px; } input[type="text"],
      input[type="number"], input[type="date"], input[type="time"] { width:
      100%; padding: 5px; margin-bottom: 10px; border: 1px solid #ccc; } button
      { background-color: #6e1010; color: #fff; padding: 12px; border: none;
      border-radius: 4px; cursor: pointer; width: 100%; } button:hover {
      background-color: #6e1010; }
    </style>

  </head>
  <body>
    <form method="post" action="/addInvoice">
      <h1>Create a New Invoice</h1>
      <fieldset>
        <legend>Customer Information</legend>

        <label for="customerType">Customer Type:</label>
        <select id="customerType" name="Customer type" required>
          <option value="Normal">Normal</option>
          <option value="Member">Member</option>
        </select>

        <label for="productLine">Product Line:</label>
        <select id="productLine" name="Product line" required>
          <option value="Home and lifestyle">Home and lifestyle</option>
          <option value="Fashion accessories">Fashion accessories</option>
          <option value="Electronic accessories">Electronic accessories</option>
          <option value="Health and beauty">Health and beauty</option>
          <option value="Sports and travel">Sports and travel</option>
          <option value="Food and beverages">Food and beverages</option>
        </select>
      </fieldset>

      <fieldset>

        <label for="invoiceId">Invoice ID:</label>
        <input
          type="text"
          id="invoiceId"
          name="Invoice ID"
          pattern="\d{3}-\d{2}-\d{4}"
          placeholder="XXX-XX-XXXX"
          required
        />
            <fieldset>
        <legend>Product Information</legend>

        <!-- Product Name -->
        <label for="name">Product Name:</label>
        <input
          type="text"
          id="name"
          name="name"
          value="Sample Product"
          required
        />

        <!-- Image URL -->
        <label for="image">Image URL:</label>
        <input
          type="text"
          id="image"
          name="image"
          value="https://cdn11.bigcommerce.com/s-37777/images/stencil/2000x2000/products/868/5566/numatic_het200_hetty_vacuum_cleaner__96442.1486485783.jpg?c=2"
          required
        />

        <!-- Unit Price -->
        <label for="unitPrice">Unit Price:</label>
        <input
          type="number"
          step="0.01"
          id="unitPrice"
          name="Unit Price"
          value="25.99"
          required
          oninput="calculateTotal()"
        />

        <!-- Quantity -->
        <label for="quantity">Quantity:</label>
        <input
          type="number"
          id="quantity"
          name="Quantity"
          value="3"
          required
          oninput="calculateTotal()"
        />

        <!-- Tax -->
        <label for="tax">Tax 5%:</label>
        <input
          type="number"
          step="0.01"
          id="tax"
          name="Tax 5%"
          value="1.30"
          required
        />

        <!-- Total -->
        <label for="total">Total:</label>
        <input type="text" id="total" name="Total" value="79.17" readonly />

        <!-- Date -->
        <label for="date">Date:</label>
        <input type="date" id="date" name="Date" required value="2023-11-27" />

        <!-- Time -->
        <label for="time">Time:</label>
        <input type="time" id="time" name="Time" required value="14:30" />
      </fieldset>


      <button type="submit">Submit</button>
    </form>
    <script src="main.js"></script>
  </body>
</html>